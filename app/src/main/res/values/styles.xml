<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.TransparentStatusBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
    </style>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Transparent.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/DisableAnimation</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_radius_16dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:topRightRadius">16dp</item>
        <item name="android:topLeftRadius">16dp</item>
    </style>

    <style name="DisableAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="CheckBox">
        <item name="android:buttonTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_sub</item>
        <item name="android:textSelectHandle">@drawable/bg_empty_placeholder</item>
        <item name="android:textSelectHandleLeft">@drawable/bg_empty_placeholder</item>
        <item name="android:textSelectHandleRight">@drawable/bg_empty_placeholder</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor</item>
        <item name="boxStrokeColor">@color/text</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_height">58dp</item>
    </style>

    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="strokeColor">@color/button</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="rippleColor">@color/black_10</item>
    </style>

    <style name="Button.Outline.ToggleGroup" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="rippleColor">@color/black_10</item>
        <item name="strokeColor">@color/button_toggle_group_color</item>
    </style>

    <style name="Button.ToggleGroup">
        <item name="android:backgroundTint">@color/button_toggle_group_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Theme.AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">16dp</item>
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorAccent">@color/button_color</item>
        <item name="colorOnPrimary">@color/button_color</item>
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="AppTheme.BoldText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
    </style>

    <style name="FrozenSwitch">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/colorSecondary</item>
<!--        关闭时的颜色-->
<!--        <item name="colorSwitchThumbNormal">#383434</item>-->
<!--        关闭时的轨迹颜色-->
<!--        <item name="android:colorForeground">#ecd502</item>-->
    </style>

    <style name="AppSplash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_splash</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">100</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="ButtonChartPeriod" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/neutrals1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">3dp</item>
        <item name="rippleColor">@color/brightest_text</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>
</resources>