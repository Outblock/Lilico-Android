<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Transparent.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@style/DisableAnimation</item>
    </style>

    <style name="DisableAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="CheckBox">
        <item name="android:buttonTint">@color/colorSecondary</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_sub</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textCursorDrawable">@drawable/bg_edittext_cursor</item>
        <item name="boxStrokeColor">@color/text</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingVertical">13dp</item>
        <item name="strokeColor">@color/text</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>