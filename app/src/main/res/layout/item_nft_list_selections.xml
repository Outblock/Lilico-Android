<?xml version="1.0" encoding="utf-8"?>
<io.outblock.lilico.widgets.CardSwipeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="300dp"
    app:layoutDescription="@xml/scene_selection_card">

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="46dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="76dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="106dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.outblock.lilico.page.nft.widget.NftCardView
        android:id="@+id/card5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="136dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.helper.widget.Carousel
        android:id="@+id/carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:carousel_backwardTransition="@+id/backward"
        app:carousel_firstView="@+id/card1"
        app:carousel_forwardTransition="@+id/forward"
        app:carousel_infinite="false"
        app:carousel_nextState="@+id/next"
        app:carousel_previousState="@+id/previous"
        app:constraint_referenced_ids="card0, card1, card2, card3, card4, card5"/>
</io.outblock.lilico.widgets.CardSwipeView>