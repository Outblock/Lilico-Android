<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:id="@+id/action_group"
    app:cardBackgroundColor="@color/deep_bg"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toBottomOf="@id/avatar_view">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/address_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="@string/address"
            android:textAllCaps="false"
            android:textColor="@color/note"
            android:textSize="12sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_address"
            app:iconGravity="textTop"
            app:iconPadding="7dp"
            app:iconSize="28dp"
            app:iconTint="@color/transparent"
            app:iconTintMode="add"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wallet_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="@string/wallets"
            android:textAllCaps="false"
            android:textColor="@color/note"
            android:textSize="12sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_settings_wallet"
            app:iconGravity="textTop"
            app:iconPadding="7dp"
            app:iconSize="28dp"
            app:iconTint="@color/transparent"
            app:iconTintMode="add"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/device_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:text="@string/device"
            android:textAllCaps="false"
            android:textColor="@color/note"
            android:textSize="12sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_settings_device"
            app:iconGravity="textTop"
            app:iconPadding="7dp"
            app:iconSize="28dp"
            android:visibility="gone"
            app:iconTint="@color/transparent"
            app:iconTintMode="add"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>