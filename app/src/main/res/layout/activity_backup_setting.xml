<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTextAppearance"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/backup"
        app:titleTextColor="@color/text"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/deep_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.outblock.lilico.page.profile.widget.ProfilePreferenceProgressState
                android:id="@+id/drive_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:desc="@string/sync"
                app:descColor="@color/colorSecondaryVariant"
                app:icon="@drawable/ic_google_drive"
                app:title="Google Drive"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/background"/>

            <io.outblock.lilico.page.profile.widget.ProfilePreferenceState
                android:id="@+id/manually_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:desc="@string/sync"
                app:descColor="@color/colorSecondaryVariant"
                app:icon="@drawable/ic_profile_backup_manually"
                app:title="@string/manually"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>