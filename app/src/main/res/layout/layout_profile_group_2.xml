<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/profile_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:layout_constraintTop_toBottomOf="@id/group1">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/currency_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:desc="USD"
            app:icon="@drawable/ic_settings_currency"
            app:title="@string/currency"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/profile_card_divider"/>

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/theme_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:desc="Light"
            app:icon="@drawable/ic_settings_theme"
            app:title="@string/theme"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:background="@color/profile_card_divider"/>

        <io.outblock.lilico.page.profile.widget.ProfilePreference
            android:id="@+id/notification_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_settings_notification"
            app:title="Notification"
            app:desc="@string/off"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</com.google.android.material.card.MaterialCardView>