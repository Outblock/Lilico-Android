<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deep_bg">

        <FrameLayout
            android:id="@+id/webview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_browser_toolbar"/>

        <include
            android:id="@+id/input_layout"
            layout="@layout/layout_browser_input"
            tools:visibility="gone"/>

    </FrameLayout>

    <ViewStub
        android:id="@+id/float_tabs_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_browser_float_tabs"/>

    <io.outblock.lilico.widgets.DraggableLayout
        android:id="@+id/float_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_marginBottom="200dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/salmon_primary"
            app:cardCornerRadius="60dp"/>
    </io.outblock.lilico.widgets.DraggableLayout>
</FrameLayout>