<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet_info_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="28dp"
        app:cardBackgroundColor="#2f2f2f"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="26dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_wallet_card_circle"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_padding"
                android:text="Blowfish Wallet"
                android:textColor="#fdfbf9"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/balance_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_padding"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$123093"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_padding"
                android:text="0x0c666c888d8fb999"
                android:textColor="#fdfbf9"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                android:id="@+id/copy_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/ic_address_copy"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintStart_toEndOf="@id/address"
                app:layout_constraintTop_toTopOf="@id/address"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/hide_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/activity_padding"
                android:background="?attr/actionBarItemBackground"
                android:src="@drawable/ic_show_pwd_eye"
                app:layout_constraintBottom_toBottomOf="@id/address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/address"
                app:tint="@color/white_60"
                tools:ignore="ContentDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/wallet_logo"
        android:layout_width="152dp"
        android:layout_height="145dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/ic_blow_fish_2k"
        android:elevation="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="31dp"
        app:cardBackgroundColor="@color/front_color"
        app:cardCornerRadius="16dp"
        android:padding="0dp"
        app:contentPadding="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toBottomOf="@id/wallet_info_card">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/send_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/note"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_send"
                app:iconGravity="textTop"
                app:iconPadding="10dp"
                app:iconSize="18dp"
                app:iconTint="@color/neutrals3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/receive_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:background="?attr/selectableItemBackground"
                android:text="@string/receive"
                android:textAllCaps="false"
                android:textColor="@color/note"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_receive"
                app:iconGravity="textTop"
                app:iconPadding="10dp"
                app:iconSize="18dp"
                app:iconTint="@color/neutrals3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buy_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/buy"
                android:textAllCaps="false"
                android:textColor="@color/note"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_buy"
                app:iconGravity="textTop"
                app:iconPadding="10dp"
                app:iconSize="18dp"
                app:iconTint="@color/neutrals3"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/swap_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:text="@string/swap"
                android:textAllCaps="false"
                android:textColor="@color/note"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_swap"
                app:iconGravity="textTop"
                app:iconPadding="10dp"
                app:iconSize="18dp"
                app:iconTint="@color/neutrals3"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>