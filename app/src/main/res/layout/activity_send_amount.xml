<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_wallet_create_mnemonic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/send_to"
        app:titleTextColor="@color/text"/>

    <FrameLayout
        android:id="@+id/contact_card_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_16dp"
        android:backgroundTint="@color/bg_icon"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <include
            android:id="@+id/contact_card"
            layout="@layout/item_address_book_person"/>

    </FrameLayout>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="end"
        android:layout_margin="4dp"
        android:background="?attr/actionBarItemBackground"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="@id/contact_card_wrapper"
        app:layout_constraintTop_toTopOf="@id/contact_card_wrapper"
        app:tint="@color/nav_icon"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/transfer_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/transfer_amount"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_card_wrapper"/>

    <EditText
        android:id="@+id/transfer_amount_input"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="8dp"
        android:autofillHints="phone"
        android:background="@drawable/bg_round_16dp"
        android:backgroundTint="@color/neutrals12"
        android:inputType="numberDecimal"
        android:paddingStart="60dp"
        android:paddingEnd="30dp"
        android:textColor="@color/text"
        app:layout_constraintTop_toBottomOf="@id/transfer_amount_title"
        tools:ignore="LabelFor"
        tools:text="123456"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/coin_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@id/transfer_amount_input"
        app:layout_constraintStart_toStartOf="@id/transfer_amount_input"
        app:layout_constraintTop_toTopOf="@id/transfer_amount_input">

        <ImageView
            android:id="@+id/coin_icon_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_coin_flow"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_arrow_drop_down_24"
            app:tint="@color/colorSecondary"
            tools:ignore="ContentDescription"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/max_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="8dp"
        android:stateListAnimator="@null"
        android:text="@string/max"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textSize="10sp"
        app:cornerRadius="16dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/transfer_amount_input"
        app:layout_constraintEnd_toEndOf="@id/transfer_amount_input"
        app:layout_constraintTop_toTopOf="@id/transfer_amount_input"
        app:rippleColor="@color/black_20"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/convert_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/note"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer_amount_input"
        tools:text="≈ $ 0.00"/>

    <ImageButton
        android:id="@+id/swap_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="?attr/actionBarItemBackground"
        android:src="@drawable/ic_swap_amount"
        app:layout_constraintBottom_toBottomOf="@id/convert_amount_view"
        app:layout_constraintStart_toEndOf="@id/convert_amount_view"
        app:layout_constraintTop_toTopOf="@id/convert_amount_view"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_medium"
        android:text="@string/amount_balance"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/convert_amount_view"/>

    <ImageView
        android:id="@+id/balance_icon_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_coin_flow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/balance_title"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/balance_amount_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/balance_icon_view"
        app:layout_constraintStart_toEndOf="@id/balance_icon_view"
        app:layout_constraintTop_toTopOf="@id/balance_icon_view"
        tools:text="1580.88 Flow"/>

    <TextView
        android:id="@+id/balance_amount_convert_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/note"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/balance_icon_view"
        app:layout_constraintStart_toEndOf="@id/balance_amount_view"
        app:layout_constraintTop_toTopOf="@id/balance_icon_view"
        tools:text=" ≈ $ 293844.23"/>
</androidx.constraintlayout.widget.ConstraintLayout>
