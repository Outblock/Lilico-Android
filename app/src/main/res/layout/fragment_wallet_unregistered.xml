<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guide_g_animation">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsettat"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/front_color"
        android:textSize="52sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/desc_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/desc_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montsettat_medium"
        android:gravity="center"
        android:text="@string/welcome_desc"
        android:textColor="@color/front_color"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/create_button"
        app:layout_constraintTop_toBottomOf="@id/title_view"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="41dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/salmon_primary"
        android:fontFamily="@font/inter_semi_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/create_wallet"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_add_circle_fill"
        app:iconGravity="textStart"
        app:iconPadding="14dp"
        app:layout_constraintBottom_toTopOf="@id/import_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/black_10"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/import_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginHorizontal="41dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_semi_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/import_wallet"
        android:textAllCaps="false"
        android:textColor="@color/gray_33"
        android:textSize="17sp"
        app:cornerRadius="100dp"
        app:icon="@drawable/ic_import_arrow"
        app:iconGravity="textStart"
        app:iconPadding="20dp"
        app:iconTint="#FABE19"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:rippleColor="@color/black_10"/>

</androidx.constraintlayout.widget.ConstraintLayout>