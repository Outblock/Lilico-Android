<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_wallet_create_mnemonic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/text"/>

    <EditText
        android:id="@+id/name_text"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:autofillHints="name"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/name"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColor="@color/text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <TextView
        android:id="@+id/name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        android:text="@string/address_add_name_tip"
        android:textColor="@color/note"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text"/>

    <EditText
        android:id="@+id/address_text"
        style="@style/EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="25dp"
        android:autofillHints="name"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/address"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:textColor="@color/text"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_tip"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/address_text"
        app:layout_constraintTop_toBottomOf="@id/address_text">

        <ImageView
            android:id="@+id/state_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_username_error"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/state_text"
            app:layout_constraintStart_toStartOf="@id/address_text"
            app:layout_constraintTop_toTopOf="@id/state_text"
            tools:visibility="visible"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/state_text"
            app:layout_constraintTop_toTopOf="@id/state_text"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:text="@string/address_add_address_tip"
            android:textColor="@color/text_sub"
            android:textSize="14sp"
            android:visibility="visible"
            tools:visibility="visible"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:enabled="false"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:backgroundTint="@color/button_color"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
